<h1 class="text-center">Create new category</h1>
<%= render 'shared/errors', obj: @category %>

<div class="row">
    <div class="col-md-12">
        <%= form_for(@category, :html => {class: "form-horizontal", role: "role"}) do |f| %>
            <div class="form-group">
                <div class="control-label col-sm-2">
                    <%= f.label :name %>
                </div>
                <div class="col-sm-8">
                    <%= f.text_field :name, class: "form-control", placeholder: "Enter Category", autofocus: true %>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <%= f.submit "Create category", class: "btn btn-primary btn-lg" %>
                </div>
            </div>
        <% end %>
        <div class="col-xs-4 col-xs-offset-4">
            [ <%= link_to 'Cancel and Back to Articles', articles_path %> ]
        </div>
    </div>
</div>