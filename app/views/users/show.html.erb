<h1 class="text-center">Welcome to <%= @user.username %>'s Page</h1>

<div class="row">
    <div class="col-md-4 col-md-offset-4 text-center">
        <%= gravatar_for @user, size: 200 %>
    </div>
</div>
<h4 class="text-center"><%= @user.username %>'s Articles</h4>
<p class="text-center">
    <% if logged_in? && current_user.admin? %>
        <%= link_to 'Delete user', user_path(@user), method: :delete, data: {confirm: "Sure?"}, class: "btn btn-xs btn-danger" %>
    <% end %>
</p>

<div class="text-center">
    <%= will_paginate(@user_articles) %>
</div>
<%= render 'articles/article', obj: @user_articles %>
<div class="text-center">
    <%= will_paginate(@user_articles) %>
</div>